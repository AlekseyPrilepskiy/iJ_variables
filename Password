internal class Program
{
    private static void Main(string[] args)
    {
        Console.Write("Добро пожаловать! Придумайте пароль для доступа: ");
        string userPassword = Console.ReadLine();

        string inputPassword;

        int endAttempts = 0;

        for (int inputAttempts = 3; inputAttempts > endAttempts; inputAttempts--)
        {
            Console.Write("Введите пароль: ");
            inputPassword = Console.ReadLine();

            if (inputPassword == userPassword)
            {
                Console.WriteLine("Ваши секреты открыты...");
                break;
            }
            else
            {
                Console.WriteLine($"Неверный пароль. У вас осталось попыток: {inputAttempts - 1}");
            }
        }
    }
}
