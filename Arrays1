internal class Program
{
    private static void Main(string[] args)
    {
        int line, column;
        int counter = 0;
        int numberFirstColumn = 0;
        int numberSecondLine = 1;
        int sumSecondLine = 0;
        int multiplicationFirstColumn = 1;

        Console.Write("Введите чилсо строк массива: ");
        line = Convert.ToInt32(Console.ReadLine());

        Console.Write("Введите число столбцов массива: ");
        column = Convert.ToInt32(Console.ReadLine());

        int[,] array = new int[line, column];

        for (int i = 0; i < array.GetLength(0); i++)
        {
            Console.WriteLine($"Введите строку {i + 1}: ");

            for (int j = 0; j < array.GetLength(1); j++)
            {
                array[i, j] = Convert.ToInt32(Console.ReadLine());
                
                if (j == numberFirstColumn)
                    multiplicationFirstColumn *= array[i, j];

                if (i == numberSecondLine)
                    sumSecondLine += array[i, j];
            }

            Console.WriteLine();
        }
        
        foreach (int i in array)
        {
            Console.Write(i + " ");

            counter++;

            if (counter == column)
            {
                Console.WriteLine();
                counter = 0;
            }
        }

        Console.WriteLine($"Произведение первого столбца: {multiplicationFirstColumn}");
        Console.WriteLine($"Сумма второй линии: {sumSecondLine}");
    }
}
