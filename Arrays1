internal class Program
{
    private static void Main(string[] args)
    {
        int line;
        int column;
        int columnCounter = 0;
        int startPositionCounter = 0;
        int numberFirstColumn = 0;
        int numberSecondLine = 1;
        int sumSecondLine = 0;
        int multiplicationFirstColumn = 1;
        int shiftLineForUser = 1;

        Console.Write("Введите чилсо строк массива: ");
        line = Convert.ToInt32(Console.ReadLine());

        Console.Write("Введите число столбцов массива: ");
        column = Convert.ToInt32(Console.ReadLine());

        int[,] numbers = new int[line, column];

        for (int i = 0; i < numbers.GetLength(0); i++)
        {
            Console.WriteLine($"Введите элементы {i + shiftLineForUser} строки через Enter: ");

            for (int j = 0; j < numbers.GetLength(1); j++)
            {
                numbers[i, j] = Convert.ToInt32(Console.ReadLine());
            }

            Console.WriteLine();
        }
        
        foreach (int i in numbers)
        {
            Console.Write(i + " ");

            columnCounter++;

            if (columnCounter == column)
            {
                Console.WriteLine();

                columnCounter = startPositionCounter;
            }
        }

        for (int i = 0; i < column; i++)
        {
            sumSecondLine += numbers[numberSecondLine, i];
        }

        Console.WriteLine($"Сумма второй линии: {sumSecondLine}");
        
        for (int i = 0; i < line; i++)
        {
            multiplicationFirstColumn *= numbers[i, numberFirstColumn];
        }

        Console.WriteLine($"Произведение первого столбца: {multiplicationFirstColumn}");
    }
}
