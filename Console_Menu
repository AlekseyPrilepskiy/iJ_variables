internal class Program
{
    private static void Main(string[] args)
    {
        const string PersonalInformation = "1";
        const string Weather = "2";
        const string RandomNumber = "3";
        const string ClearConsole = "4";
        const string Exit = "5";

        bool programExit = false;

        int temperature1 = -15;
        int temperature2 = 5;
        int temperature3 = 15;
        int temperature4 = 20;
        int temperature5 = 30;

        Console.WriteLine("Добро пожаловать!");
        Console.WriteLine("Для старта нажмите Enter.");
        Console.ReadKey();

        while (programExit == false)
        {
            Console.WriteLine($"{PersonalInformation} - Вывод информации о себе.");
            Console.WriteLine($"{Weather} - Вывод информации о погоде.");
            Console.WriteLine($"{RandomNumber} - Вывод случайного числа.");
            Console.WriteLine($"{ClearConsole} - Очистить консоль.");
            Console.WriteLine($"{Exit} - Выход из программы.");

            Console.Write("Введите команду: ");
            string inputCommand = Console.ReadLine();

            switch (inputCommand) 
            {
                case PersonalInformation:
                    Console.Write("Введите ваше имя: ");
                    string name = Console.ReadLine();

                    Console.Write("Введите ваш возраст: ");
                    int age = Convert.ToInt32(Console.ReadLine());

                    Console.WriteLine($"Вас зовут {name}, вам {age} лет.");
                    break;

                case Weather:
                    Console.Write("Сколько градусов на улице? ");
                    int inputTemperature = Convert.ToInt32(Console.ReadLine());

                    if (inputTemperature <= temperature1)
                        Console.WriteLine("Очень холодно");

                    else if (inputTemperature > temperature1 && inputTemperature <= temperature2)
                        Console.WriteLine("Холодно");

                    else if (inputTemperature > temperature2 && inputTemperature <= temperature3)
                        Console.WriteLine("Прохладно");

                    else if (inputTemperature > temperature3 && inputTemperature <= temperature4)
                        Console.WriteLine("Тепло");

                    else if (inputTemperature > temperature4 && inputTemperature <= temperature5)
                        Console.WriteLine("Жарко");

                    else
                        Console.WriteLine("Очень жарко");

                    break;

                case RandomNumber:
                    Random random = new Random();
                    int number = random.Next();

                    Console.WriteLine(number);
                    break;

                case ClearConsole:
                    Console.Clear();
                    break;

                case Exit:
                    programExit = true;
                    break;

                default:
                    Console.WriteLine("Несуществующая команда.");
                    Console.WriteLine("Попробуйте снова.");
                    break;
            }

            Console.WriteLine();
        }
    }
}
