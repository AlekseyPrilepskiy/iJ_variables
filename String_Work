internal class Program
{
    private static void Main(string[] args)
    {
        Console.WriteLine("Как вас зовут?");
        string name = Console.ReadLine();
        Console.WriteLine("Сколько вам лет?");
        byte age = Convert.ToByte(Console.ReadLine());
        Console.Write("Ваш знак зодиака: ");
        string astrology = Console.ReadLine();
        Console.WriteLine("В каком дне месяца вы подились?");
        int birthDate = Convert.ToInt32(Console.ReadLine());

        Console.WriteLine($"Вас зовут {name}, вам {age} лет, ваш знак зодиака {astrology}, вы родились {birthDate} числа.");
    }
}
